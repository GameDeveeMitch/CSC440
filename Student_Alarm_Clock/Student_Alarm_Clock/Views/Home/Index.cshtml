@model IEnumerable<Student_Alarm_Clock.Model.alarm_list>

@{
    ViewBag.Title = "Home Page";
}
<script type="text/javascript" src="~/Scripts/Custom/alarmClock.js"></script>

<div class="jumbotron">
    <h1>Welcome To The Terradome</h1>
    <p class="lead">The BEST alarm clock</p>
</div>

<div>
    <div class="col-sm-12">
        <p id="time">Time</p>
    </div>
</div>
<div>
    <div class="col-sm-12">
        <p id="date">Date</p>
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        <label for="alarmName">Alarm Name</label>
        <input id="alarmName" type="text" />

        <br />
        <br />
        <label for="time">Time</label>
        <input id="alarmTime" type="time" step="1" />

        <br />
        <br />
        <div>
            <h4> Select Days for Alarm</h4>
            <input type="checkbox" name="boxGroup1" value="1" checked> Monday <br />
            <input type="checkbox" name="boxGroup1" value="2"> Tuesday <br />
            <input type="checkbox" name="boxGroup1" value="3"> Wednesday <br />
            <input type="checkbox" name="boxGroup1" value="4"> Thursday <br />
            <input type="checkbox" name="boxGroup1" value="5"> Friday <br />
            <input type="checkbox" name="boxGroup1" value="6"> Saturday <br />
            <input type="checkbox" name="boxGroup1" value="7"> Sunday <br />
        </div>

        <br />
        <br />
        <button type="button" class="btn btn-primary" id="createAlarm">Set Alarm</button>
    </div>
    <div class="col-sm-6">
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th>Alarm Name</th>
                    <th>Alarm Time</th>
                    <th>Update Alarm</th>
                    <th>Delete Alarm</th>
                </tr>
            </thead>
            <tbody id="alarms">
                @foreach (var list in Model) /*Tried to comment field that I was not currntly using. For now I have just suppressed the exception with hopes of
                        understanding more in the future. Will have to reupdate my DB, alarm_list model, and HomeController so do not accept mine in the merge.*/
                {
                    <p>
                        @list.alarmID
                        @list.wakeTime
                        @*@list.redTime
                            @list.yellowTime*@
                        @list.userID
                    </p>
                }
            </tbody>
        </table>
    </div>
</div>
