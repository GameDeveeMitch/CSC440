@{
    ViewBag.Title = "Home Page";
}
<script type="text/javascript" src="~/Scripts/Custom/alarmClock.js"></script>

<div class="jumbotron">
    <h1>Welcome To The Terradome</h1>
    <p class="lead">The BEST alarm clock</p>
</div>

<div class="row">
    <p id="date">Date</p>
    <p id="time">Time</p>
    <label for="hour">Hour</label>
    <input id="hour" type="number" max="12" min="0" />
    <label for="minute">Minute</label>
    <input id="minute" type="number" max="60" min="0" />
    <label for="second">Second</label>
    <input id="second" type="number" max="60" min="0" />
    <label for="amPm">AM/PM</label>
    <select id="amPm">
        <option value="AM">AM</option>
        <option value="PM">PM</option>
    </select>

    <br />
    <br />

    <button type="button" class="btn btn-primary" id="createAlarm">Set Alarm</button>
</div>