@{
    ViewBag.Title = "Home Page";
}
<script type="text/javascript" src="~/Scripts/Custom/alarmClock.js"></script>

<div class="jumbotron">
    <h1>Welcome To The Terradome</h1>
    <p class="lead">The BEST alarm clock</p>
</div>

<div>
    <div class="col-sm-12">
        <p id="time">Time</p>
    </div>
</div>
<div>
    <div class="col-sm-12">
        <p id="date">Date</p>
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        <label for="alarmName">Alarm Name</label>
        <input id="alarmName" type="text" />
        <label for="hour">Hour</label>
        <input id="hour" type="number" max="12" min="0" />
        <label for="minute">Minute</label>
        <input id="minute" type="number" max="60" min="0" />
        <label for="second">Second</label>
        <input id="second" type="number" max="60" min="0" />
        <label for="amPm">AM/PM</label>
        <select id="amPm">
            <option value="AM">AM</option>
            <option value="PM">PM</option>
        </select>

        <br />
        <br />

        <button type="button" class="btn btn-primary" id="createAlarm">Set Alarm</button>
    </div>
    <div class="col-sm-6">
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th>Alarm Name</th>
                    <th>Alarm Time</th>
                    <th>Delete Alarm</th>
                </tr>
            </thead>
            <tbody id="alarms">
            </tbody>
        </table>
    </div>
</div>
