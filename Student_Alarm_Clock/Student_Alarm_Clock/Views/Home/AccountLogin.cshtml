@{
    ViewBag.Title = "AccountLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="~/Scripts/Custom/user.js"></script>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1 style="padding-top: 40px;">
                Alarm Clock Login
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <br />
        </div>
    </div>
</div>

<div class="form-container">
    <form name="registerForm">
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <label for="userName">Enter Username</label>
                </div>

                <div class="col-sm-3">
                    <input type="text" id="username" placeholder="" required />
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-sm-3">
                    <label for="userPass">Password</label>
                </div>

                <div class="col-sm-3">
                    <input type="password" id="password" placeholder="" required />
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-lg-1">
                    <input class="button" id="submitLogin" type="button" value="Submit" />
                </div>
            </div>
            <div class="row">
                <div >
                    <input class="btn btn-block hidden" id="result" style="margin-top: 30px;" />
                </div>
            </div>
        </div>
    </form>
</div>

